---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { ChevronRight } from "lucide-react";

const projects = await getCollection("projects");
---

<Layout title="Projects">
  <main class="container mx-auto px-4 dark:bg-neutral-950">
    <div class="fixed inset-0 h-screen w-screen overflow-hidden">
      <div class="absolute -inset-[100%] opacity-50">
        <div
          class="absolute top-1/4 left-1/3 size-1/4 rounded-full bg-radial from-blue-400 to-blue-600/60 blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-1/3 right-1/4 size-1/4 rounded-full bg-radial from-purple-400 to-purple-600/60 blur-3xl"
        >
        </div>
      </div>
    </div>
    <div
      class="flex flex-col items-start justify-start bg-card/60 backdrop-blur-sm shadow-xl rounded-xl relative max-w-[64ch] mx-auto p-8"
    >
      <h1 class="text-4xl font-mono font-medium mb-6 px-4">Projects</h1>
      <ul class="w-full space-y-4">
        {
          projects.map((project) => (
            <li>
              <a
                href={`/projects/${project.slug}`}
                class="flex items-center justify-between hover:bg-card/50 transition-all duration-300 rounded-md p-4 group"
              >
                <div class="flex flex-col gap-2">
                  <span class="text-lg font-mono">{project.data.title}</span>
                  <span class="text-sm text-muted-foreground">
                    {project.data.description}
                  </span>
                </div>
                <ChevronRight className="size-8 text-muted-foreground" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
