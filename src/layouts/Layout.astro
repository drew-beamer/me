---
import "@/styles/globals.css";
const { title, description = "Drew Beamer's personal website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-mono overscroll-none dark">
    <div class="px-8 md:px-0 py-12 mx-auto">
      <slot />
    </div>
  </body>
</html>
